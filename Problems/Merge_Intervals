from typing import List

class Solution:
    def merge(self, intervals: List[List[int]]) -> List[List[int]]:
        """
        Merges all overlapping intervals and returns the result.

        Args:
            intervals: A list of [start, end] pairs.

        Returns:
            A list of non-overlapping intervals.
        """
        
        # If the list has 0 or 1 interval, no merging is needed.
        if not intervals:
            return []

        # 1. Sort the intervals based on their start time (x[0]).
        # This is the crucial first step for the greedy approach.
        intervals.sort(key=lambda x: x[0])
        
        # 2. Initialize the result list with the first sorted interval.
        # We will compare subsequent intervals against this last merged interval.
        merged_intervals = [intervals[0]]
        
        # 3. Iterate through the rest of the sorted intervals starting from the second one.
        for current_start, current_end in intervals[1:]:
            
            # Get the end time of the last interval that was added to the result list.
            last_merged_end = merged_intervals[-1][1]
            last_merged_start = merged_intervals[-1][0]
            
            # Check for overlap: If the current interval starts before or at the 
            # end of the last merged interval, they overlap.
            if current_start <= last_merged_end:
                # Merge: Update the end time of the last merged interval.
                # The new end time must be the maximum of the two end times.
                merged_intervals[-1][1] = max(last_merged_end, current_end)
            else:
                # No overlap: The current interval must be added as a new, separate interval.
                merged_intervals.append([current_start, current_end])
                
        return merged_intervals

# Example Usage:
# sol = Solution()
# print(sol.merge([[1,3],[2,6],[8,10],[15,18]]))
# # Expected Output: [[1, 6], [8, 10], [15, 18]]
# print(sol.merge([[1,4],[4,5]]))
# # Expected Output: [[1, 5]]
# print(sol.merge([[1,4],[0,2],[3,5]]))
# # Expected Output: [[0, 5]]
